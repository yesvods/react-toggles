{
  "name": "ES678-boilderplate",
  "version": "0.0.0",
  "description": "Full function boilerplate to take advantage of latest ECMAScript(JavaScript) Feature.Build your react component, javascript utils and so on. The limitation is your imagination",
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib dist coverage",
    "lint": "eslint src test examples",
    "test": "karma start --single-run",
    "test-node": "mocha --compilers js:babel-core/register --recursive -R nyan src/**/__test__/*.js",
    "test:watch": "karma start karma.conf.js --auto-watch",
    "test-node:watch": "mocha --compilers js:babel-core/register --recursive --watch src/**/__test__/*.js",
    "cover-node": "./node_modules/babel-istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- --recursive src/**/__test__/*.js",
    "coveralls": "npm run cover-node -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "check": "npm run lint && npm run test",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/constant.js --config webpack.config.development.js",
    "build:umd:min": "webpack src/index.js dist/constant.min.js --config webpack.config.production.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "build:example": "npm run build && ./node_modules/webpack/bin/webpack.js example/base/index.js example/base/bundle.js --config webpack.config.base.js",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yesvods/ES678-boilerplate.git"
  },
  "keywords": [
    "es6",
    "es7",
    "boilerplate"
  ],
  "author": "Jogis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yesvods/ES678-boilerplate/issues"
  },
  "homepage": "https://github.com/yesvods/ES678-boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.2.1",
    "babel-eslint": "^4.1.5",
    "babel-istanbul": "^0.5.9",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.1.18",
    "coveralls": "^2.11.6",
    "css-loader": "^0.23.1",
    "eslint": "^1.10.1",
    "eslint-config-rackt": "^1.1.1",
    "karma": "^0.13.15",
    "karma-mocha": "^0.2.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-phantomjs-shim": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.4",
    "mocha-lcov-reporter": "^1.0.0",
    "node-sass": "^3.4.2",
    "phantomjs": "^1.9.19",
    "react": "^0.14.3",
    "react-addons-test-utils": "^0.14.3",
    "react-dom": "^0.14.3",
    "rimraf": "^2.4.4",
    "sass-loader": "^3.1.2",
    "should": "^7.1.1",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.9"
  },
  "dependencies": {
    "lodash": "^3.10.1"
  }
}
